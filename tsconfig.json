{
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"allowJs": true,

		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,

		"strict": true,
		"noFallthroughCasesInSwitch": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	}
}
